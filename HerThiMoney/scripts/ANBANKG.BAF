IF
	AreaCheck("AR0700")
	Range([PC],15)
	CombatCounter(0)
	Global("ANbankNight","LOCALS",0) 
	OR(2)
		TimeLT(8)
		TimeGT(19)
THEN
	RESPONSE #100
SetGlobal("ANbankNight","LOCALS",1)   
StartDialogNoSet([PC]) 
Continue()     
END

